{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [
      "node"
    ],
    /*  ðŸ‘‡  AÃ±ade estas 2 lÃ­neas  */
    "baseUrl": "src",
    "paths": {
      "engine/*": ["engine/*"]
    },
    "allowJs": true
  },
   "exclude": [
   "**/*.spec.ts",
   "**/*.test.ts",
   "test.ts"
  ],
  "files": [
    "src/main.ts",
    "src/main.server.ts",
    "server.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.d.ts"
  ]
}
